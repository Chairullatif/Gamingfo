<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Gamingfo" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:colorPrimary">@color/primary300</item>
        <item name="android:statusBarColor">@color/primary300</item>
    </style>

    <style name="Theme.Gamingfo" parent="Base.Theme.Gamingfo" />

    <!--<<<<<<<<<<<<<<<<<<<<<<<<<< status bar theme >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
    <style name="SplashscreenTheme" parent="Base.Theme.Gamingfo">
        <item name="android:statusBarColor"  tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>


    <!--<<<<<<<<<<<<<<<<<<<<<<<<<< TEXT STYLE >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
    <style name="Txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:textColor">@color/colorNeutral500</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <!--    Text Regular-->
    <style name="Txt.Regular12" parent="Txt">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Txt.Regular14" parent="Txt.Regular12">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Txt.Regular16" parent="Txt.Regular12">
        <item name="android:textSize">14sp</item>
    </style>

    <!--    Text Medium-->
    <style name="Txt.Medium12" parent="Txt">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Txt.Medium14" parent="Txt.Medium12">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Txt.Medium16" parent="Txt.Medium12">
        <item name="android:textSize">16sp</item>
    </style>

    <!--    Text SemiBold-->
    <style name="Txt.SemiBold12" parent="Txt">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Txt.SemiBold14" parent="Txt.SemiBold12">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Txt.SemiBold16" parent="Txt.SemiBold12">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Txt.SemiBold24" parent="Txt.SemiBold12">
        <item name="android:textSize">24sp</item>
    </style>

    <!--    Text Bold-->
    <style name="Txt.Bold12" parent="Txt">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Txt.Bold14" parent="Txt.Bold12">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Txt.Bold16" parent="Txt.Bold12">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Txt.Bold18" parent="Txt.Bold12">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Txt.Bold24" parent="Txt.Bold12">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Txt.Bold36" parent="Txt.Bold12">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Txt.Bold48" parent="Txt.Bold12">
        <item name="android:textSize">48sp</item>
    </style>

    <!--<<<<<<<<<<<<<<<<<<<<<<<<<< BUTTON STYLE >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->
    <style name="ButtonBackStyle">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="cardCornerRadius">14dp</item>
        <item name="cardElevation">0dp</item>
    </style>

</resources>